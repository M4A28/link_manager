<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_4sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_4sdp">

        <TextView
            android:id="@+id/tv_url_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="30 fox spice you don't know  "
            android:fontFamily="sans-serif-medium"
            android:padding="@dimen/_2sdp"/>

        <TextView
            android:id="@+id/tv_url_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/accent"
            android:textStyle="normal"
            android:text="30 fox spice you don't know  "
            android:fontFamily="sans-serif-light"
            android:padding="@dimen/_2sdp"/>
        <com.google.android.material.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.chip.Chip
                android:id="@+id/cp_url_category"
                android:text="Web"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/accent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/cp_url_category_2"
                android:text="Task"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/accent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </com.google.android.material.chip.ChipGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_edit_url"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_weight="1"
                android:src="@drawable/ic_edit"
                android:layout_margin="@dimen/_2sdp"
                app:tint="@color/dark_gray"/>

            <ImageView
                android:id="@+id/iv_copy_url"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/ic_content_copy"
                android:layout_margin="@dimen/_2sdp"
                android:layout_weight="1"
                app:tint="@color/dark_gray"/>

            <ImageView
                android:id="@+id/iv_share_url"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/ic_share"
                android:layout_margin="@dimen/_2sdp"
                android:layout_weight="1"
                app:tint="@color/dark_gray"/>

            <ImageView
                android:id="@+id/iv_delete_url"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/ic_delete"
                android:layout_weight="1"
                android:layout_margin="@dimen/_2sdp"
                app:tint="@color/dark_gray"/>



        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>